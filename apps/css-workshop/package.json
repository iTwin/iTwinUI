{
  "name": "css-workshop",
  "private": true,
  "version": "0.1.0",
  "description": "Workshop environment containing HTML pages demonstrating itwinui-css",
  "dependencies": {},
  "devDependencies": {
    "@itwin/itwinui-css": "*",
    "@itwin/itwinui-icons-elements": "0.20.0",
    "autoprefixer": "^10",
    "backstopjs": "~6.2.1",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "vite": "^4"
  },
  "scripts": {
    "build": "vite build",
    "clean": "rimraf dist && rimraf node_modules && rimraf .turbo",
    "dev": "vite",
    "preview": "npx -y serve dist -p 3050 -L",
    "approve": "backstop --config=./backstop/backstop.js approve",
    "test:only": "backstop --config=./backstop/backstop.js test --docker",
    "test": "npm-run-all -p -r \"preview\" \"test:only {1}\" --"
  }
}
