---
import Layout from './_layout.astro';
import Tag_ from '../components/Tag.astro';
---

<Layout title='Tag'>
  <script>
    import '@itwin/itwinui-icons-elements/close-small';
  </script>
  <style is:global>
    /* Forces grouped tags to display on 1 line, can be set by the dev team. */
    #demo-default-container,
    #demo-truncate {
      width: 445px;
    }
  </style>

  <h1>Tag</h1>
  <hr />

  <h2>Default</h2>
  <section id='demo-default'>
    <Tag_ title='Tag' id='test-tag-1' />
    <br />
    <Tag_ title='Overflowing tag' style='max-width: 125px;' />
    <br />
    <Tag_ button={false} title='No Button' />
  </section>

  <hr />

  <h2>Default tag containers</h2>
  <section id='demo-default-container'>
    <div class='iui-tag-container iui-visible' aria-label='My tags'>
      <Tag_ title='Tag' />
      <Tag_ title='Long tag' />
      <Tag_ title='Very long tag' />
      <Tag_ title='Very very long tag' />
      <Tag_ title='Tag' />
      <Tag_ title='Long tag' />
      <Tag_ title='Very long tag' />
      <Tag_ title='Very very long tag' />
      <Tag_ title='Tag' />
      <Tag_ title='Long tag' />
      <Tag_ title='Very long tag' />
      <Tag_ title='Very very long tag' />
    </div>

    <br />

    <div class='iui-tag-container iui-visible iui-truncate' aria-label='My tags'>
      <Tag_ title='Tag' />
      <Tag_ title='Long tag' />
      <Tag_ title='Very long tag' />
      <Tag_ title='Very very long tag' />
    </div>

    <br />

    <div class='iui-tag-container iui-visible iui-scroll' aria-label='My tags'>
      <Tag_ title='Tag' />
      <Tag_ title='Long tag' />
      <Tag_ title='Very long tag' />
      <Tag_ title='Very very long tag' />
      <Tag_ title='Tag' />
      <Tag_ title='Long tag' />
      <Tag_ title='Very long tag' />
      <Tag_ title='Very very long tag' />
      <Tag_ title='Tag' />
      <Tag_ title='Long tag' />
      <Tag_ title='Very long tag' />
      <Tag_ title='Very very long tag' />
    </div>
  </section>

  <hr />

  <h2>Basic tag containers</h2>
  <section id='demo-basic'>
    <div class='iui-tag-container'>
      <Tag_ variant='basic' title='tags' button={false} /><Tag_
        variant='basic'
        title='go'
        button={false}
      /><Tag_ variant='basic' title='here' button={false} /><Tag_
        variant='basic'
        title='tags'
        button={false}
      /><Tag_ variant='basic' title='go' button={false} /><Tag_
        variant='basic'
        title='here'
        button={false}
      />
    </div>

    <div class='iui-tag-container'>
      <Tag_ variant='basic' title='tags' button={false} href='#' id='test-tag-2' /><Tag_
        variant='basic'
        title='go'
        button={false}
        href='#'
      /><Tag_ variant='basic' title='here' button={false} href='#' /><Tag_
        variant='basic'
        title='tags'
        button={false}
        href='#'
      /><Tag_ variant='basic' title='go' button={false} href='#' /><Tag_
        variant='basic'
        title='here'
        button={false}
        href='#'
      />
    </div>
  </section>

  <h2>Truncate basic tag containers</h2>
  <section id='demo-truncate'>
    <div class='iui-tag-container iui-truncate'>
      <Tag_ variant='basic' title='tags' button={false} /><Tag_
        variant='basic'
        title='go'
        button={false}
      /><Tag_ variant='basic' title='here' button={false} /><Tag_
        variant='basic'
        title='tags'
        button={false}
      /><Tag_ variant='basic' title='go' button={false} /><Tag_
        variant='basic'
        title='here'
        button={false}
      /><Tag_ variant='basic' title='tags' button={false} /><Tag_
        variant='basic'
        title='go'
        button={false}
      /><Tag_ variant='basic' title='here' button={false} /><Tag_
        variant='basic'
        title='tags'
        button={false}
      /><Tag_ variant='basic' title='go' button={false} /><Tag_
        variant='basic'
        title='here'
        button={false}
      /><Tag_ variant='basic' title='tags' button={false} /><Tag_
        variant='basic'
        title='go'
        button={false}
      /><Tag_ variant='basic' title='here' button={false} />
    </div>

    <div class='iui-tag-container iui-truncate'>
      <Tag_ variant='basic' title='tags' button={false} href='#' id='test-tag-3' /><Tag_
        variant='basic'
        title='go'
        button={false}
        href='#'
      /><Tag_ variant='basic' title='here' button={false} href='#' /><Tag_
        variant='basic'
        title='tags'
        button={false}
        href='#'
      /><Tag_ variant='basic' title='go' button={false} href='#' /><Tag_
        variant='basic'
        title='here'
        button={false}
        href='#'
      /><Tag_ variant='basic' title='tags' button={false} href='#' /><Tag_
        variant='basic'
        title='go'
        button={false}
        href='#'
      /><Tag_ variant='basic' title='here' button={false} href='#' /><Tag_
        variant='basic'
        title='tags'
        button={false}
        href='#'
      /><Tag_ variant='basic' title='go' button={false} href='#' /><Tag_
        variant='basic'
        title='here'
        button={false}
        href='#'
      /><Tag_ variant='basic' title='tags' button={false} href='#' /><Tag_
        variant='basic'
        title='go'
        button={false}
        href='#'
      /><Tag_ variant='basic' title='here' button={false} href='#' /><Tag_
        variant='basic'
        title='tags'
        button={false}
        href='#'
      /><Tag_ variant='basic' title='go' button={false} href='#' /><Tag_
        variant='basic'
        title='here'
        button={false}
