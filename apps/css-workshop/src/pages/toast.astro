---
import Layout from './_layout.astro';
import Anchor_ from '../components/Anchor.astro';
import IconButton_ from '../components/IconButton.astro';
---

<Layout title='Toast notification'>
  <script>
    import '@itwin/itwinui-icons-elements/status-success';
    import '@itwin/itwinui-icons-elements/status-warning';
    import '@itwin/itwinui-icons-elements/status-error';
    import '@itwin/itwinui-icons-elements/info-circular';
    import '@itwin/itwinui-icons-elements/close-small';
  </script>
  <style is:global>
    html {
      color-scheme: light dark;
    }

    html.iui-theme-dark {
      color-scheme: dark;
    }

    html.iui-theme-light {
      color-scheme: light;
    }

    body {
      height: 90vh;
    }

    .placement-control {
      display: flex;
      flex-wrap: wrap;
    }

    .placement-choice {
      margin: 0 8px;
      display: flex;
      align-items: center;
    }
  </style>

  <h1>Toast</h1>
  <hr />
  <div style='display: grid; grid-template-rows: auto 1fr; gap: 12px; height: 100%;'>
    <div class='placement-control'>
      <h3>Toast placement:</h3>
      <label class='placement-choice' id='top-start-option'>
        <input type='radio' name='radio-demo-6' value='top-start' />
        <span>Top Start</span>
      </label>
      <label id='top-option' class='placement-choice'>
        <input type='radio' name='radio-demo-6' value='top' checked />
        <span>Top</span>
      </label>
      <label id='top-end-option' class='placement-choice'>
        <input type='radio' name='radio-demo-6' value='top-end' />
        <span>Top End</span>
      </label>
      <label id='bottom-start-option' class='placement-choice'>
        <input type='radio' name='radio-demo-6' value='bottom-start' />
        <span>Bottom Start</span>
      </label>
      <label id='bottom-option' class='placement-choice'>
        <input type='radio' name='radio-demo-6' value='bottom' />
        <span>Bottom</span>
      </label>
      <label id='bottom-end-option' class='placement-choice'>
        <input type='radio' name='radio-demo-6' value='bottom-end' />
        <span>Bottom End</span>
      </label>
    </div>

    <div style='position: relative; border: 1px solid var(--iui-color-border);' id='toast-test'>
      <div class='iui-toast-wrapper iui-placement-top' style='position: absolute;' id='toast-click'>
        <div class='iui-toast iui-positive' id='demo-positive'>
          <div class='iui-status-area'>
            <svg-status-success class='iui-icon' aria-hidden='true'></svg-status-success>
          </div>
          <div class='iui-message'>Job processing completed.</div>
          <Anchor_ class='iui-toast-anchor' underline='true' status='positive'>
            View the report
          </Anchor_>
          <IconButton_ aria-label='Close' variant='borderless' size='small'>
            <svg-close-small></svg-close-small>
          </IconButton_>
        </div>

        <div class='iui-toast iui-positive'>
          <div class='iui-status-area'>
            <svg-status-success class='iui-icon' aria-hidden='true'></svg-status-success>
          </div>
          <div class='iui-message'>Processing completed.</div>
          <IconButton_ aria-label='Close' variant='borderless' size='small'>
            <svg-close-small></svg-close-small>
          </IconButton_>
        </div>

        <div class='iui-toast iui-positive'>
          <div class='iui-status-area'>
            <svg-status-success class='iui-icon' aria-hidden='true'></svg-status-success>
          </div>
          <div class='iui-message'>
            Bacon ipsum dolor amet shoulder andouille meatball meatloaf chicken pork loin alcatra
            boudin pig beef ribs. Short loin short ribs buffalo shankle, jerky fatback leberkas
            meatball boudin. Kevin meatloaf flank pancetta, picanha tail kielbasa salami ham hock
            sirloin cow frankfurter capicola. Jowl shankle short ribs rump shank ribeye, frankfurter
            sausage.
          </div>
        </div>

        <div class='iui-toast iui-informational'>
          <div class='iui-status-area'>
            <svg-info-circular class='iui-icon' aria-hidden='true'></svg-info-circular>
          </div>
          <div class='iui-message'>
            Bacon ipsum dolor amet shoulder andouille meatball meatloaf chicken pork loin alcatra
            boudin pig beef ribs. Short loin short ribs buffalo shankle, jerky fatback leberkas
            meatball boudin. Kevin meatloaf flank pancetta, picanha tail kielbasa salami ham hock
            sirloin cow frankfurter capicola. Jowl shankle short ribs rump shank ribeye, frankfurter
            sausage.
          </div>
          <Anchor_ class='iui-toast-anchor' underline='true' status='informational'>View</Anchor_>
          <IconButton_ aria-label='Close' variant='borderless' size='small'>
            <svg-close-small></svg-close-small>
          </IconButton_>
        </div>

        <div class='iui-toast iui-informational' id='demo-informational'>
          <div class='iui-status-area'>
            <svg-info-circular class='iui-icon' aria-hidden='true'></svg-info-circular>
          </div>
          <div class='iui-message'>26 files are available for synchronization.</div>
          <Anchor_ class='iui-toast-anchor' underline='true' status='informational'>View</Anchor_>
        </div>

        <div class='iui-toast iui-negative' id='demo-negative'>
          <div class='iui-status-area'>
            <svg-status-error class='iui-icon' aria-hidden='true'></svg-status-error>
          </div>
          <div class='iui-message'>Job processing error.</div>
          <Anchor_ class='iui-toast-anchor' underline='true' status='negative'>
            View the report
          </Anchor_>
          <IconButton_ aria-label='Close' variant='borderless' size='small'>
            <svg-close-small></svg-close-small>
          </IconButton_>
        </div>

        <div class='iui-toast iui-warning' id='demo-warning'>
          <div class='iui-status-area'>
            <svg-status-warning class='iui-icon' aria-hidden='true'></svg-status-warning>
          </div>
          <div class='iui-message'>Job processing requires approval.</div>
          <Anchor_ class='iui-toast-anchor' underline='true' status='warning'>Approve</Anchor_>
          <IconButton_ aria-label='Close' variant='borderless' size='small'>
            <svg-close-small></svg-close-small>
          </IconButton_>
        </div>
      </div>
    </div>
  </div>

  <script is:inline>
    const toasts = document.querySelector('#toast-click');
    // Clicking on menu-item should toggle selection
    document.querySelectorAll('input').forEach((item) => {
      item.addEventListener('click', () => {
        toasts.classList.value = `iui-toast-wrapper iui-placement-${item.value}`;
      });
    });
  </script>
</Layout>
