---
type Props = {
  isExternal?: boolean;
  status?: 'informational' | 'positive' | 'warning' | 'negative';
  underline?: boolean;
} & astroHTML.JSX.HTMLAttributes;

const { class: className, isExternal, status, underline, ...props } = Astro.props;
---

<a
  class:list={['iui-anchor', className, { 'iui-anchor-external': isExternal }]}
  data-iui-status={status}
  data-iui-underline={underline ? 'true' : undefined}
  {...props}><slot /></a
>
