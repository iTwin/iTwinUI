---
type Props = {
  external?: 'true';
  status?: 'informational' | 'positive' | 'warning' | 'negative';
  underline?: 'true';
} & astroHTML.JSX.HTMLAttributes;

const { class: className, external, href, status, underline, ...props } = Astro.props;
---

<a
  class:list={['iui-anchor', className, external ? 'iui-anchor-external' : '']}
  data-iui-status={status}
  data-iui-underline={underline}
  {...external ? { referrerpolicy: 'no-referrer', target: '_blank' } : {}}
  href={href ? href : '#'}
  {...props}><slot /></a
>
