---
type Props = {
  isLoading?: boolean;
  label?: React.ReactNode;
  indeterminate?: boolean;
  checked?: boolean;
  disabled?: boolean;
  variant?: 'eyeball';
  status?: 'negative' | 'positive' | 'warning';
} & astroHTML.JSX.HTMLAttributes;

const { status, isLoading, label, indeterminate, disabled, variant, ...props } = Astro.props;
---

<label
  class:list={[
    'iui-checkbox-wrapper',
    {
      'iui-disabled': disabled,
      'iui-loading': isLoading,
      [`iui-${status}`]: !!status,
    },
  ]}
  {...props}
>
  <input
    class:list={[
      'iui-checkbox',
      {
        'iui-loading': isLoading,
        'iui-checkbox-visibility': variant === 'eyeball',
      },
    ]}
    type='checkbox'
    name={indeterminate ? 'indeterminate' : undefined}
    disabled={disabled}
    {...props}
  />
  {
    isLoading && (
      <div
        class='iui-progress-indicator-radial'
        data-iui-indeterminate='true'
        data-iui-size='x-small'
      />
    )
  }
  <span class='iui-checkbox-label'>
    {label}
    <slot />
  </span>
</label>
