---
type Props = {
  isActive?: boolean;
  size?: string;
  disabled?: boolean;
  startIconProps?: astroHTML.JSX.HTMLAttributes;
  endIconProps?: astroHTML.JSX.HTMLAttributes;
  contentProps?: astroHTML.JSX.HTMLAttributes;
  actionable?: boolean;
} & astroHTML.JSX.HTMLAttributes;

const {
  class: className,
  isActive,
  size,
  disabled,
  startIconProps,
  endIconProps,
  actionable,
  contentProps,
  ...props
} = Astro.props;
---

<li
  class:list={[
    className,
    { 'iui-active': isActive },
    { 'iui-disabled': disabled },
    { 'iui-large': size === 'large' },
  ]}
  data-iui-actionable={actionable ? 'true' : undefined}
  {...props}
>
  {
    Astro.slots.has('start-icon') && (
      <span class={startIconProps?.class} {...startIconProps} aria-hidden='true'>
        <slot name='start-icon' />
      </span>
    )
  }
  {
    Astro.slots.has('default') && (
      <span class={contentProps?.class} {...contentProps}>
        <slot />
      </span>
    )
  }
  {
    Astro.slots.has('end-icon') && (
      <span class={endIconProps?.class} {...endIconProps} aria-hidden='true'>
        <slot name='end-icon' />
      </span>
    )
  }
</li>
