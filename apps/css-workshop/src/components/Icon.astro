---
type Props = {
  svg: string;
  size?: 's' | 'm' | 'l' | 'auto';
  padded?: boolean;
  fill?: string;
} & astroHTML.JSX.HTMLAttributes;

const { svg, size = 'm', class: className, padded, fill = 'default', ...rest } = Astro.props;

const iconProps = {
  ['class:list']: ['iui-svg-icon', className],
  ['data-iui-icon-size']: size,
  ['data-iui-padded']: `${padded}`,
  ['data-iui-icon-color']: fill,
  ...rest,
};

const Element = `svg-${svg}`;
---

<Element {...iconProps} aria-hidden='true' />
