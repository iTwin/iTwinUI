---
const { ...props } = Astro.props;
---

<button {...props}>
  <span aria-hidden='true' class='tooltip'><slot name='tooltip' /></span>
  <slot />
</button>

<style lang='scss'>
  @layer components {
    button {
      display: grid;
      place-items: center;
      min-width: 2rem;
      min-height: 2rem;
      color: var(--color-text);
      background: transparent;
      border-radius: 9e9px;
      border: 1px solid transparent;
      cursor: pointer;
      padding: 0.25rem;

      &:hover {
        background: hsl(0 0% 0% / 0.2);
      }

      > :global(svg) {
        width: 1rem;
        height: 1rem;
        color: CanvasText;
      }
    }

    .tooltip {
      visibility: hidden;

      position: absolute;
      top: -100%;
      left: 50%;
      transform: translate(-66%);
      font-size: var(--type--2);
      padding: 0.5rem;
      white-space: nowrap;
      background-color: var(--color-background-2);
      border: 1px solid var(--color-line-2);
      border-radius: 4px;

      button:is(:hover, :focus-within) > & {
        visibility: visible;
      }
    }
  }
</style>
