  },
  "keywords": [
    "css",
    "html",
    "react",
    "ui",
    "ux",
    "standards",
    "theme",
    "light",
    "dark",
    "bentley systems",
    "itwin"
  ],
  "dependencies": {},
  "devDependencies": {
    "chokidar": "^3.5.3",
    "lightningcss": "^1.25.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "sass": "^1.63.6",
    "sass-embedded": "^1.63.6"
  },
  "scripts": {
    "build": "pnpm clean && pnpm build:css && node ../../scripts/copyrightLinter.js --fix css/*",
