{
  "name": "@itwin/itwinui-react",
  "version": "1.27.0",
  "author": "Bentley Systems",
  "license": "MIT",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "typings": "cjs/index.d.ts",
  "description": "A react implementation of our iTwinUI UX standards",
  "homepage": "https://github.com/iTwin/iTwinUI-react",
  "keywords": [
    "component",
    "components",
    "design-system",
    "design",
    "framework",
    "frontend",
    "itwin",
    "itwinui",
    "react-component",
    "react",
    "ui",
    "ux"
  ],
  "scripts": {
    "build": "yarn clean && yarn mkdirp lib/ && yarn copy-files && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
    "build:watch": "yarn clean && yarn mkdirp lib/ && yarn copy-files && concurrently \"tsc -p tsconfig.cjs.json --watch\" \"tsc -p tsconfig.esm.json --watch\"",
    "clean": "yarn clean:coverage && yarn clean:lib",
    "clean:coverage": "rimraf coverage",
    "clean:lib": "rimraf lib",
    "test": "jest",
    "test:watch": "jest --watch",
    "createComponent": "node scripts/createComponent.js",
    "pretty": "prettier --config .prettierrc \"scripts/**/*\" src/{__tests__,core,style,utils}/**/*{tsx,ts,jsx,js,css,scss} --write",
    "lint": "eslint */**/*.{js,ts,tsx} --max-warnings=0",
    "lint:fix": "yarn lint --fix && yarn lint:copyright --fix */**/*.{js,ts,tsx}",
    "lint:copyright": "node scripts/copyrightLinter.js",
    "copy-files": "cpx package.json lib && cpx \"{README,LICENSE,CHANGELOG}.md \" lib",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@itwin/itwinui-css": "^0.42.0",
    "@itwin/itwinui-icons-react": "^1.1.1",
    "@itwin/itwinui-illustrations-react": "^1.0.1",
    "@tippyjs/react": "^4.2.5",
    "@types/react-table": "^7.0.18",
    "classnames": "^2.2.6",
    "react-table": "^7.1.0",
    "react-transition-group": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@storybook/addon-essentials": "~6.3.6",
    "@storybook/addon-storysource": "~6.3.6",
    "@storybook/addons": "~6.3.6",
    "@storybook/api": "~6.3.6",
    "@storybook/components": "~6.3.6",
    "@storybook/core-events": "~6.3.6",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "~6.3.6",
    "@storybook/theming": "~6.3.6",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@types/classnames": "^2.2.7",
    "@types/jest": "^27.0.0",
    "@types/node": "^10.12.2",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-transition-group": "^2.9.2",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "babel-loader": "^8.2.2",
    "concurrently": "^5.3.0",
    "cpx": "^1.5.0",
    "creevey": "^0.7.36",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fast-glob": "^3.2.5",
    "husky": "^4.0.0",
    "inquirer": "^6.2.2",
    "jest": "^27.0.6",
    "jest-cli": "^27.0.6",
    "jest-junit": "^12.0.0",
    "lint-staged": "^12.1.2",
    "markdown-to-jsx": "6.11.4",
    "mkdirp": "^1.0.4",
    "prettier": "2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^2.6.2",
    "storybook-dark-mode": "^1.0.8",
    "tippy.js": "^6.3.1",
    "ts-jest": "^27.0.4",
    "ts-loader": "^8.0.1",
    "ts-node": "^8.0.2",
    "typescript": "^4.4.3",
    "webpack": "^4.46.0"
  },
  "peerDependencies": {
    "react": "^16.8.6 || ^17.0.0",
    "react-dom": "^16.8.6 || ^17.0.0"
  },
  "resolutions": {
    "braces": "^2.3.1",
    "hosted-git-info": ">=3.0.8",
    "trim": "^0.0.3",
    "browserslist": "^4.16.6",
    "glob-parent": "^5.1.2",
    "css-what": "^5.0.1",
    "immer": "^9.0.6",
    "set-value": "^4.1.0",
    "prismjs": "^1.25.0",
    "nth-check": "^2.0.1",
    "ansi-regex": "^5.0.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,jsx,js}": [
      "prettier --write",
      "eslint --fix",
      "yarn lint:copyright --fix"
    ]
  },
  "sideEffects": [
    "**/*.scss",
    "**/*.css"
  ]
}
