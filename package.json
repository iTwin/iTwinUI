{
  "name": "itwinui-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{scss}": [
      "prettier --write"
    ],
    "*.{scss,html}": [
      "stylelint --fix"
    ],
    "*.{scss,html,js}": [
      "yarn lint:copyright --fix"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test --",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "lint:copyright": "node packages/shared/copyrightLinter.js",
    "push-docker": "yarn workspace @itwin/itwinui-css push-docker",
    "createComponent": "yarn workspace @itwin/itwinui-css createComponent",
    "approve": "yarn workspace @itwin/itwinui-css approve",
    "clean:images": "yarn workspace @itwin/itwinui-css clean:images"
  },
  "dependencies": {},
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "husky": "^8.0.2",
    "lint-staged": "^12.5.0",
    "prettier": "2.8.0",
    "rimraf": "^3.0.2",
    "turbo": "~1.6.3"
  },
  "resolutions": {
    "hosted-git-info": "6.1.1",
    "jimp": "0.16.2",
    "trim-newlines": "3.0.1",
    "minimatch": "3.1.2",
    "glob-parent": "6.0.2",
    "jpeg-js": "0.4.4",
    "ansi-regex": "5.0.1",
    "node-fetch": "2.6.7",
    "async": "3.2.4"
  }
}
