{
  "name": "itwinui-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "playgrounds/*",
      "internal/*",
      "examples",
      "testing/*"
    ]
  },
  "lint-staged": {
    "*.{scss}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{scss,html,js}": [
      "npm run lint:copyright -- --fix"
    ],
    "*.{tsx,ts,jsx,js}": [
      "prettier --write",
      "node scripts/copyrightLinter.js --fix"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "prepare": "husky install",
    "postinstall": "patch-package",
    "lint:copyright": "node scripts/copyrightLinter.js",
    "createComponent": "node scripts/createComponent.js",
    "approve:css": "npm run approve --workspace-@itwin/itwinui-css",
    "approve:react": "npm run approve --workspace=storybook",
    "clean:images": "npm run clean:images --workspace=@itwin/itwinui-css",
    "clean": "turbo run clean && rimraf node_modules",
    "release": "npm run build -- --filter={./packages/*}... && changeset publish"
  },
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "patch-package": "~8.0.0",
    "prettier": "2.8.8",
    "rimraf": "^3.0.2",
    "turbo": "~1.9.0"
  },
  "overrides": {
    "hosted-git-info": "6.1.1",
    "jimp": "0.16.2",
    "trim-newlines": "3.0.1",
    "minimatch": "3.1.2",
    "glob-parent": "6.0.2",
    "jpeg-js": "0.4.4",
    "ansi-regex": "5.0.1",
    "async": "3.2.4",
    "trim": "0.0.3",
    "set-value": "4.1.0",
    "postcss": "8.4.26",
    "prettier": "2.8.8",
    "nanoid": "3.3.4",
    "loader-utils": "2.0.4",
    "autoprefixer": "10.4.14",
    "yaml": "^2.2.2",
    "semver": "^7.5.2",
    "optionator": "~0.9.3",
    "typescript": "~5.1.6"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "packageManager": "npm@8.0.0",
  "prettier": "configs/prettier-config"
}
